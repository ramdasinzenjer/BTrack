<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_launcher"
    tools:context="${relativePackage}.${activityClass}" >

    <ListView
        android:id="@+id/mlist"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_above="@+id/mtexttotal"
        android:layout_below="@+id/mtext1"
        android:layout_centerHorizontal="true"
        android:divider="#008000"
        android:padding="10dp"
        android:dividerHeight="1dp" >

    </ListView>

    <TextView
        android:id="@+id/mtext1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/mtexttotal"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="Hello User"
        android:textColor="#008000"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/mtextseat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="126dp"
        android:text="Number of seats Available:"
        android:textColor="#008000"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/mtexttotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/mtextseat"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="23dp"
        android:text="Total number of seats:"
        android:textColor="#008000"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/mtextsrc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/mtextseat"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:text="Source :"
        android:textColor="#008000"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/mtextdest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mtextsrc"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="Destination :"
        android:textColor="#008000"
        android:textSize="20dp"
        android:textStyle="bold" />

</RelativeLayout>
